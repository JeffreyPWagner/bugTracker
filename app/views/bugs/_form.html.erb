<%= form_with(model: bug, local: true) do |form| %>
  <% if bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
        <% bug.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= form.label :user, class: 'control-group' %>
    <div class="controls">
      <%= collection_select( :bug, :user_id, User.all, :id, :last_first, {}, { :multiple => false } ) %>
    </div>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_area :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :issue_type %>
    <%= form.select :issue_type, Bug.issue_types.keys.to_a %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Bug.priorities.keys.to_a %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Bug.statuses.keys.to_a %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
