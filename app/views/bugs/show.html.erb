<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Title</h5>
      <p class="card-text"><%= @bug.title %></p>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Description</h5>
      <p class="card-text"><%= @bug.description %></p>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Issue Type</h5>
      <p class="card-text"><%= @bug.issue_type %></p>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Priority</h5>
      <p class="card-text"><%= @bug.priority %></p>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Status</h5>
      <p class="card-text"><%= @bug.status %></p>
    </div>
  </div>

  <%= link_to 'Edit', edit_bug_path(@bug) %> |
  <%= link_to 'Back', bugs_path %>
</div>
